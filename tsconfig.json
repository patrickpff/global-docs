{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "lib": ["ES2019"],
        "strict": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}