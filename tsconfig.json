{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "lib": ["ES2022", "DOM"],
        
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
